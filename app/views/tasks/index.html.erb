<div class="row">
  <div class="col-md-10 col-md-offset-1">
  <% @tasks.each do |task| %>
		  <div class="col-xs-6 col-md-2 notebox">

			<%= link_to (image_tag task.photo.url(:medium)), task %>

	        
	          <% if task.title? %>
		          	<% if task.title.length >=20 %>
			      		<div class="tasktitile"><%= task.title.truncate(20) %></div><br>
			      	<% else %>
						<div class="tasktitile"><%= task.title %></div><br>
			      	<% end%>
		      	<!--<%= task.user.email %><br>-->
		      		<% if user_signed_in?  && current_user.id==task.user_id %>
		      			<span class="pull-right"> <%= link_to "Edit", edit_task_path(task), :class =>"btn btn-default"%></span>
		      		<% end %>
		      <% end %>


		  </div>
	  <% end %>
  </div>
</div>
