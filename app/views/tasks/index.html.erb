<div class="row">
  <div class="col-md-10 col-md-offset-1">
  <% @tasks.each do |task| %>
		  <div class="col-md-2 notebox">

			<%= link_to (image_tag task.photo.url(:medium)), task %>

	        
	          <% if task.title? %>
		          	<%= link_to(task) do %>
			          	<% if task.title.length >=18%>
				      		<label class="tasktitile"><%= task.title.truncate(18)+".." %></label><br>
				      	<% else %>
							<label class="tasktitile"><%= task.title %></label><br>
				      	<% end%>
				      	<% if task.event_time?%>
				      		<label class="tasktime"><%= task.event_time.strftime('%D %H:%M') %></label><br>
				      	<%end %>
			      	<%end %>
		      	<!--<%= task.user.email %><br>-->
		      		<% if user_signed_in?  && current_user.id==task.user_id %>
		      			<span class="pull-right"> <%= link_to "Edit", edit_task_path(task), :class =>"btn btn-default"%></span>
		      		<% end %>
		      <% end %>


		  </div>
	  <% end %>
  </div>
</div>
