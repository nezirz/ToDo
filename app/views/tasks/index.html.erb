<div class="row" style="    height: 1100px;">
  <div class="col-md-12 pull-right">
  <% @tasks.each do |task| %>
		  <div class="col-md-2 notebox top60">

			<%= link_to (image_tag task.photo.url(:medium)), task %>

	        
	          	<% if task.title? %>
		          	<%= link_to(task) do %>
		          		<% if task.event_time?%>
				      		<label class="tasktime"><%= task.event_time.strftime('%D %H:%M') %></label><br>
				      	<%end %>  
			          	<% if task.title.length >=16 %>
				      		<label class="tasktitile"><%= task.title.truncate(16)+".." %></label><br>
				      	<% else %>
							<label class="tasktitile"><%= task.title %></label><br>
				      	<% end%>
     			
				      	<% if user_signed_in?  && current_user.id==task.created_by %>
	      					<span><%= link_to "Edit", edit_task_path(task), :class =>"btn btn-default noteedit"%></span>
	      					<span>
	      					<%= link_to "delete", task_path(task), method: :delete,
                                  data: { confirm: "You sure?" } , :class =>"btn btn-default notedelete"%>
							</span>


      					<% end %>
	      	   	<%end %>
		      



		      <% end %>

		  </div>
	  <% end %>
  </div>
</div>
